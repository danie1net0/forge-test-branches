{
  "name": "ddr/forge-test-branches",
  "description": "Create ephemeral test environments from git branches on Laravel Forge",
  "keywords": [
    "laravel",
    "forge",
    "review-apps",
    "ephemeral-environments",
    "gitlab-ci"
  ],
  "homepage": "https://github.com/danie1net0/forge-test-branches",
  "license": "MIT",
  "authors": [
    {
      "name": "Daniel Neto",
      "email": "danielneto314@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.4",
    "illuminate/contracts": "^11.0||^12.0",
    "saloonphp/laravel-plugin": "^3.0",
    "saloonphp/saloon": "^3.0",
    "spatie/laravel-data": "^4.0",
    "spatie/laravel-package-tools": "^1.16"
  },
  "require-dev": {
    "driftingly/rector-laravel": "^2.0",
    "larastan/larastan": "^3.0",
    "laravel/pint": "^1.14",
    "nunomaduro/collision": "^8.8",
    "orchestra/testbench": "^10.0.0||^9.0.0",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-arch": "^4.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Ddr\\ForgeTestBranches\\": "src/",
      "Ddr\\ForgeTestBranches\\Database\\Factories\\": "database/factories/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ddr\\ForgeTestBranches\\Tests\\": "tests/",
      "Workbench\\App\\": "workbench/app/"
    }
  },
  "scripts": {
    "post-autoload-dump": "@composer run prepare",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "prepare-husky": "npx husky install",
    "prettier:fix": "npx prettier --write .",
    "test": "pest",
    "test:coverage": "pest --coverage",
    "lint": "pint --test",
    "lint:fix": "pint",
    "analyse": "phpstan analyse --memory-limit=-1",
    "refactor": "rector process",
    "refactor:dry": "rector process --dry-run",
    "check": [
      "@lint",
      "@analyse",
      "@refactor:dry",
      "@test"
    ],
    "format": [
      "@prettier:fix",
      "@refactor",
      "@lint:fix"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Ddr\\ForgeTestBranches\\ForgeTestBranchesServiceProvider"
      ],
      "aliases": {
        "ForgeTestBranches": "Ddr\\ForgeTestBranches\\Facades\\ForgeTestBranches"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
